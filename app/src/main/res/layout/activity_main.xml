<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="731dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <ImageButton
        android:id="@+id/flecha1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_arrow_upward_24" />

    <Button
        android:id="@+id/btn1_vn_mas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="P+"
        android:textColor="#4CAF50"
        app:iconTint="#4CAF50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn1_hp_mas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/flecha1"
        app:layout_constraintEnd_toEndOf="@+id/btn1_vn_mas"
        app:layout_constraintStart_toStartOf="@+id/btn1_vn_mas"
        app:layout_constraintTop_toBottomOf="@+id/btn1_vn_mas"
        app:srcCompat="@drawable/baseline_favorite_24" />

    <Button
        android:id="@+id/btn2_vn_mas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="P+"
        android:textColor="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn2_vn_menos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="P-"
        android:textColor="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/flecha2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:srcCompat="@drawable/baseline_arrow_downward_24" />

    <ImageButton
        android:id="@+id/btn2_hp_mas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn2_vn_mas"
        app:layout_constraintEnd_toEndOf="@+id/btn2_vn_mas"
        app:layout_constraintStart_toStartOf="@+id/btn2_vn_mas"
        app:layout_constraintTop_toBottomOf="@+id/flecha2"
        app:srcCompat="@drawable/baseline_favorite_24" />

    <ImageButton
        android:id="@+id/btn2_hp_menos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn2_vn_menos"
        app:layout_constraintEnd_toEndOf="@+id/btn2_vn_menos"
        app:layout_constraintStart_toStartOf="@+id/btn2_vn_menos"
        app:layout_constraintTop_toBottomOf="@+id/flecha2"
        app:srcCompat="@drawable/baseline_favorite_border_24" />

    <Button
        android:id="@+id/btn1_vn_menos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="P-"
        android:textColor="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn1_hp_menos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/flecha1"
        app:layout_constraintEnd_toEndOf="@+id/btn1_vn_menos"
        app:layout_constraintStart_toStartOf="@+id/btn1_vn_menos"
        app:layout_constraintTop_toBottomOf="@+id/btn1_vn_menos"
        app:srcCompat="@drawable/baseline_favorite_border_24" />

    <TextView
        android:id="@+id/text1_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25/0"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/flecha1"
        app:layout_constraintEnd_toStartOf="@+id/btn1_hp_menos"
        app:layout_constraintStart_toEndOf="@+id/btn1_hp_mas"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25/0"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn2_hp_menos"
        app:layout_constraintStart_toEndOf="@+id/btn2_hp_mas"
        app:layout_constraintTop_toBottomOf="@+id/flecha2" />

</androidx.constraintlayout.widget.ConstraintLayout>